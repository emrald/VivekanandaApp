<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_clean" >
    
	<LinearLayout
            android:id="@+id/favinner_linlay_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <Button
                android:id="@+id/btn_SendSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/send_sms" />

            <Button
                android:id="@+id/btn_Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/share" />

            <Button
                android:id="@+id/btn_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@drawable/btn_back" />
        </LinearLayout>

		<TextView
		    android:id="@+id/favinner_tv_quote"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:gravity="center"
		    android:scrollbars="vertical"
		    android:layout_above="@id/favinner_linlay_bottom"
		    android:text="Fav Quote"
		    android:textColor="#FFFFFF"
		    android:textSize="14dp" />

</RelativeLayout>