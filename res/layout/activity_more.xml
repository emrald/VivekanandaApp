<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        android:id="@+id/share_tv_shareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="share"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_tv_shareTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:id="@+id/share_rel_mainshare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_shape" >
			<RelativeLayout
                android:id="@+id/share_rel_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/share_iv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:src="@drawable/icon_facebook" />

                <Button
                    android:id="@+id/share_btn_btnfacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@+id/share_iv_aerrofacebook"
                    android:layout_toRightOf="@+id/share_iv_facebook"
                    android:background="@drawable/empty"
                    android:gravity="left"
                    android:text="Facebook"
                    android:textColor="#363636"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/share_iv_aerrofacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:gravity="left|center_vertical"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/share_line_facebook"
                style="@style/horizontal_line_style"
                android:layout_height="2dip"
                android:layout_below="@+id/share_rel_facebook"
                android:layout_marginTop="2dip" />
            <RelativeLayout
                android:id="@+id/share_rel_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_line_facebook" >

                <ImageView
                    android:id="@+id/share_iv_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:src="@drawable/icon_twitter" />

                <Button
                    android:id="@+id/share_btn_btntwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@+id/share_iv_aerroTwitter"
                    android:layout_toRightOf="@+id/share_iv_twitter"
                    android:background="@drawable/empty"
                    android:gravity="left"
                    android:text="Twitter"
                    android:textColor="#363636"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/share_iv_aerroTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="left|center_vertical"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/share_line_email"
                style="@style/horizontal_line_style"
                android:layout_height="2dip"
                android:layout_below="@id/share_rel_twitter"
                android:layout_marginTop="2dip" />

            <RelativeLayout
                android:id="@+id/share_rel_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_line_email" >

                <ImageView
                    android:id="@+id/share_iv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:src="@drawable/icon_email" />

                <Button
                    android:id="@+id/share_btn_btnmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@+id/share_iv_aerroemail"
                    android:layout_toRightOf="@id/share_iv_mail"
                    android:background="@drawable/empty"
                    android:gravity="left"
                    android:text="Email"
                    android:textColor="#363636"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/share_iv_aerroemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="left|center_vertical"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/share_line_ratethisApp"
                style="@style/horizontal_line_style"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_below="@id/share_rel_email"
                android:layout_marginTop="2dip" />

            <RelativeLayout
                android:id="@+id/share_rel_twitter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_line_ratethisApp" >

                <ImageView
                    android:id="@+id/share_iv_rate_this_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:src="@drawable/icon_rate_this_app" />

                <Button
                    android:id="@+id/share_btn_rateapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@+id/share_iv_aerroTwitter"
                    android:layout_toRightOf="@+id/share_iv_rate_this_app"
                    android:background="@drawable/empty"
                    android:gravity="left"
                    android:text="Rate This App"
                    android:textColor="#363636"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/share_iv_aerrorateapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="left|center_vertical"
                    android:src="@drawable/arrow" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>